<h2>List of actual transactions:</h2>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Transaction id</th>
      <th scope="col">Status</th>
      <th scope="col">Made on</th>
      <th scope="col">Amount</th>
      <th scope="col">Currency code</th>
      <th scope="col">Description</th>
      <th scope="col">Category</th>
    </tr>
  </thead>
  <tbody>
   <% @transactions['data'].each.with_index(1) do |acc, index|%>
    <tr>
      <th scope="row"><%= index %></th>
      <td><%= acc['id'] %></td>
      <td><%= acc['status'] %></td>
      <td><%= acc['made_on'] %></td>
      <td><%= acc['amount'] %></td>
      <td><%= acc['currency_code'] %></td>
      <td><%= acc['description'] %></td>
      <td><%= acc['category'] %></td>
    </tr>
    <% end %>
  </tbody>
</table>